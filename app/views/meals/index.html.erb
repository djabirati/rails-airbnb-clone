
<div class="">
  <div class="map_cards_container">
    <div class="cards-index">
      <% @results.each do |meal|%>
        <%= link_to meal_path(meal) do%>
          <div class="card-trip">
            <img src="<%= cl_image_path(meal.photo.key) %>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= meal.title %></h2>
                <p><%= meal.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= meal.price%>â‚¬</h2>
              <img src="<%= cl_image_path(meal.user.photo.key) %>" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        <%end%>
      <% end %>
    </div>



    <div class="" id="map"
          style=" height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
