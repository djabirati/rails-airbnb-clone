
<div class="">
  <div class="map_cards_container">
    <div class="cards">
        <% @meals.each do |meal| %>
            <div class="card-product">
              <%= cl_image_tag(meal.photo.key) %>
              <div class="card-product-infos">
                <div>
                  <h2><%= link_to meal.title, meal_path(meal) %><h2>
                  <p><%= meal.description %></p>
                </div>
                <h2 class="card-product-pricing"><%= meal.price %>â‚¬</h2>
                <%= cl_image_tag(meal.user.photo.key, class: 'card-product-user avatar-bordered') %>
              </div>
            </div>
          <%# <% end %>
        <% end %>
    </div>

    <div class="" id="map"
          style=" height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>

<style>
  .map_cards_container {
    display: flex;
  }

  #map {
    width: 33vw;
 }

 .cards {
   width: 67vw;
 }
</style>
