


<div class="flex-container">

  <div class="flex-child magenta">
    <div class="card" style="width: 25rem;">
      <%= cl_image_tag @meal.photo.key, height: 300, width: 400, crop: :fill, class: "imagemeal" %>
      <div class="card-body">
        <h5 class="card-title"><%= @meal.title %></h5>
        <p class="card-text"><%= @meal.description %></p>
        <p class="card-text">€<%= @meal.price %></p>
        <%= link_to "Booking", new_meal_booking_path(current_user), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="flex-child green">
    <h3>Ingrédients :</h3>
    <h5>Pour <%= @meal.title %></h5>
    <p>
      1 kg de tomates mûres<br>
      1 gros oignon<br>
      2 feuilles de laurier<br>
      1 gousse d’ail<br>
      Persil<br>
      Basilic, thym<br>
      Sel & poivre<br>
      Pour les boulettes de viande<br><br>
      600 g de viande de bœuf hachée<br>
      30 g de parmesan<br>
      2 œufs<br>
      Persil<br>
      Sel & poivre<br><br>
      Un petit bol de farine<br>
    </p>
  </div>

</div>
